<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.xwikisas</groupId>
    <artifactId>eesc-xwiki-distribution</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>eesc-xwiki-ui-uas-all</artifactId>
  <packaging>xar</packaging>

  <name>EESC - XWiki - Distribution - UI All - UAS</name>

  <dependencies>
    <dependency>
      <groupId>org.xwiki.enterprise</groupId>
      <artifactId>xwiki-enterprise-ui-mainwiki-all</artifactId>
      <version>${enterprise.version}</version>
      <type>xar</type>
    </dependency>
    <dependency>
      <groupId>com.xwikisas</groupId>
      <artifactId>eesc-xwiki-ui-uas</artifactId>
      <version>${project.version}</version>
      <type>xar</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-tool-xar-plugin</artifactId>
        <executions>
          <execution>
            <id>unxar-xwiki-enterprise-ui-mainwiki-all</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unxar</goal>
            </goals>
            <configuration>
              <groupId>org.xwiki.enterprise</groupId>
              <artifactId>xwiki-enterprise-ui-mainwiki-all</artifactId>
              <version>${enterprise.version}</version>
              <type>xar</type>
              <outputDirectory>${project.build.outputDirectory}</outputDirectory>
              <includeDependencies>true</includeDependencies>
              <excludes>
                <exclude>Blog/*</exclude>
                <exclude>Dashboard/*</exclude>
                <exclude>Sandbox/*</exclude>
              </excludes>
            </configuration>
          </execution>
          <!-- Must be at the end since it may replace some of the previous
            dependencies files -->
          <execution>
            <id>unxar-eesc-xwiki-ui-uas</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unxar</goal>
            </goals>
            <configuration>
              <groupId>com.xwikisas</groupId>
              <artifactId>eesc-xwiki-ui-uas</artifactId>
              <version>${project.version}</version>
              <type>xar</type>
              <outputDirectory>${project.build.outputDirectory}</outputDirectory>
              <includeDependencies>true</includeDependencies>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
